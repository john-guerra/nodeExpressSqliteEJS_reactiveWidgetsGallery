<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <h1 class="my-4"><%= title %></h1>
      <div id="widget-container" class="mb-4">
        <div class="row">
          <% widgets.forEach(widget => { %>
              <div class="col-md-4 mb-4">
                  <div class="card">
                      <img src="<%= widget.image %>" class="card-img-top" alt="<%= widget.title %>">
                      <div class="card-body">
                          <h5 class="card-title"><%= widget.title %></h5>
                          <p class="card-text">Author: <%= widget.author %></p>
                          <p class="card-text">Source Code: <a href="<%= widget.sourceCode %>" target="_blank">View Source</a></p>
                          <a href="<%= widget.url %>" class="btn btn-primary" target="_blank">View Widget</a>
                      </div>
                  </div>
              </div>
          <% }); %>
      </div>


      </div>
      <!-- Include the widget form partial -->
      <%- include('./partials/widget-form') %>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>

    <script src="/frontend.js"></script>
  </body>
</html>
